<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg"
    android:gravity="center_horizontal"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news"
            style="@style/ItemStyle"
            android:drawableLeft="@drawable/tab_news"
            android:text="新闻"/>

        <TextView
            android:id="@+id/focus"
            style="@style/ItemStyle"
            android:drawableLeft="@drawable/tab_focus"
            android:text="订阅"/>

        <TextView
            android:id="@+id/local"
            style="@style/ItemStyle"
            android:drawableLeft="@drawable/tab_local"
            android:text="聚焦"/>

        <TextView
            android:id="@+id/read"
            style="@style/ItemStyle"
            android:drawableLeft="@drawable/tab_read"
            android:text="阅读"/>

        <TextView
            android:id="@+id/ties"
            style="@style/ItemStyle"
            android:drawableLeft="@drawable/tab_ties"
            android:text="跟帖"/>

        <TextView
            android:id="@+id/pics"
            style="@style/ItemStyle"
            android:drawableLeft="@drawable/tab_pics"
            android:text="图片"/>

        <TextView
            android:id="@+id/vote"
            style="@style/ItemStyle"
            android:drawableLeft="@drawable/tab_vote"
            android:text="投票"/>
    </LinearLayout>
</ScrollView>